    <script>
        // ==================== SISTEMA DE LOGIN MEJORADO 2025 ====================
        
        // Credenciales por defecto para 2025
        const DEFAULT_CREDENTIALS_2025 = {
            username: 'admin2025',
            password: '2025secure',
            accessCode: 'WEB2025'
        };
        
        // Variables para el captcha
        let captchaAnswer = 0;
        
        // Variables para el contador de visitas
        let totalVisits = 0;
        
        // Variables de la aplicación principal
        let map;
        let userMarker;
        let watchId = null;
        let currentLocation = null;
        let lastWeatherUpdate = null;
        const OPENWEATHER_API_KEY = null; // Usará simulación
        
        // Datos del usuario actual
        let currentUser = {
            username: '',
            age: 0,
            gender: ''
        };
        
        // Inicializar la aplicación cuando la página cargue
        document.addEventListener('DOMContentLoaded', function() {
            initLoginSystem();
            updateVisitsCounter();
            generateCaptcha();
            setupAgeValidation();
        });
        
        // ==================== FUNCIONES DE LOGIN MEJORADO ====================
        
        function initLoginSystem() {
            // Verificar si ya está logueado
            const isLoggedIn = localStorage.getItem('isLoggedIn2025') === 'true';
            const savedUser = localStorage.getItem('currentUser2025');
            
            if (isLoggedIn && savedUser) {
                try {
                    currentUser = JSON.parse(savedUser);
                    showMainContent();
                } catch (e) {
                    showLoginForm();
                }
            } else {
                showLoginForm();
            }
            
            // Configurar eventos del formulario de login
            document.getElementById('loginForm').addEventListener('submit', handleLogin);
            document.getElementById('refreshCaptcha').addEventListener('click', generateCaptcha);
            document.getElementById('logoutBtn').addEventListener('click', handleLogout);
        }
        
        function setupAgeValidation() {
            const ageInput = document.getElementById('userAge');
            ageInput.addEventListener('input', function() {
                const age = parseInt(this.value);
                const validation = document.getElementById('ageValidation');
                
                if (age < 1 || age > 120) {
                    validation.innerHTML = '<i class="fas fa-exclamation-circle" style="color:#e74c3c"></i> Edad debe ser entre 1 y 120 años';
                    validation.style.color = '#e74c3c';
                } else {
                    validation.innerHTML = '<i class="fas fa-check-circle" style="color:#2e7d32"></i> Edad válida';
                    validation.style.color = '#2e7d32';
                }
            });
        }
        
        function showLoginForm() {
            document.getElementById('loginOverlay').style.display = 'flex';
            document.getElementById('mainContent').style.display = 'none';
        }
        
        function showMainContent() {
            document.getElementById('loginOverlay').style.display = 'none';
            document.getElementById('mainContent').style.display = 'block';
            
            // Actualizar información del usuario en la interfaz
            updateUserInfoDisplay();
            
            // Inicializar la aplicación principal
            initMap();
            setupEventListeners();
            requestLocationPermission();
        }
        
        function updateUserInfoDisplay() {
            // Actualizar información en el encabezado
            const userGreeting = getGenderGreeting();
            document.getElementById('userGreeting').textContent = userGreeting;
            
            document.getElementById('loggedUserInfo').textContent = 
                `Usuario: ${currentUser.username} | Edad: ${currentUser.age} | Género: ${currentUser.gender}`;
        }
        
        function getGenderGreeting() {
            switch(currentUser.gender) {
                case 'hombre':
                    return `Bienvenido ${currentUser.username}`;
                case 'mujer':
                    return `Bienvenida ${currentUser.username}`;
                case 'otro':
                case 'prefiero-no-decirlo':
                default:
                    return `Bienvenido/a ${currentUser.username}`;
            }
        }
        
        function handleLogin(event) {
            event.preventDefault();
            
            // Obtener valores del formulario
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const accessCode = document.getElementById('accessCode').value;
            const userAge = parseInt(document.getElementById('userAge').value);
            const gender = document.querySelector('input[name="gender"]:checked');
            const captchaInput = parseInt(document.getElementById('captchaAnswer').value);
            const acceptTerms = document.getElementById('acceptTerms').checked;
            
            // Elementos de mensaje
            const errorElement = document.getElementById('loginErrorMessage');
            const successElement = document.getElementById('loginSuccessMessage');
            const errorText = document.getElementById('errorText');
            const successText = document.getElementById('successText');
            
            // Validaciones
            let isValid = true;
            let errorMessage = '';
            
            // Validar credenciales básicas
            if (username !== DEFAULT_CREDENTIALS_2025.username || 
                password !== DEFAULT_CREDENTIALS_2025.password) {
                isValid = false;
                errorMessage += 'Usuario o contraseña incorrectos. ';
            }
            
            if (accessCode !== DEFAULT_CREDENTIALS_2025.accessCode) {
                isValid = false;
                errorMessage += 'Código de acceso inválido. ';
            }
            
            // Validar edad
            if (isNaN(userAge) || userAge < 1 || userAge > 120) {
                isValid = false;
                errorMessage += 'Edad inválida (debe ser entre 1 y 120). ';
            }
            
            // Validar género
            if (!gender) {
                isValid = false;
                errorMessage += 'Selecciona un género. ';
            }
            
            // Validar captcha
            if (captchaInput !== captchaAnswer) {
                isValid = false;
                errorMessage += 'Captcha incorrecto. ';
            }
            
            // Validar términos
            if (!acceptTerms) {
                isValid = false;
                errorMessage += 'Debes aceptar los términos y condiciones. ';
            }
            
            if (isValid) {
                // Login exitoso
                errorElement.style.display = 'none';
                
                // Guardar información del usuario
                currentUser = {
                    username: username,
                    age: userAge,
                    gender: gender.value
                };
                
                // Mostrar mensaje de éxito
                successText.textContent = `¡Acceso exitoso! Bienvenido/a ${username}`;
                successElement.style.display = 'block';
                
                // Guardar estado de sesión
                localStorage.setItem('isLoggedIn2025', 'true');
                localStorage.setItem('currentUser2025', JSON.stringify(currentUser));
                
                // Esperar 1.5 segundos y mostrar contenido principal
                setTimeout(() => {
                    successElement.style.display = 'none';
                    showMainContent();
                }, 1500);
            } else {
                // Mostrar error
                errorText.textContent = errorMessage || 'Error en la autenticación';
                errorElement.style.display = 'block';
                successElement.style.display = 'none';
                
                // Generar nuevo captcha
                generateCaptcha();
                
                // Scroll al mensaje de error
                errorElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        }
        
        function handleLogout() {
            // Limpiar sesión
            localStorage.removeItem('isLoggedIn2025');
            localStorage.removeItem('currentUser2025');
            
            // Detener seguimiento de ubicación si está activo
            if (watchId) {
                navigator.geolocation.clearWatch(watchId);
                watchId = null;
            }
            
            // Regresar al login
            showLoginForm();
            
            // Limpiar formulario
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
            document.getElementById('accessCode').value = '';
            document.getElementById('userAge').value = '';
            document.getElementById('captchaAnswer').value = '';
            document.getElementById('acceptTerms').checked = false;
            
            // Desmarcar radio buttons
            const genderRadios = document.querySelectorAll('input[name="gender"]');
            genderRadios.forEach(radio => radio.checked = false);
            
            // Restablecer validación de edad
            document.getElementById('ageValidation').innerHTML = 
                '<i class="fas fa-info-circle"></i> Debe ser entre 1 y 120 años';
            document.getElementById('ageValidation').style.color = '#666';
            
            generateCaptcha();
        }
        
        function generateCaptcha() {
            // Generar operación matemática simple
            const num1 = Math.floor(Math.random() * 10) + 1;
            const num2 = Math.floor(Math.random() * 10) + 1;
            const operators = ['+', '-', '*'];
            const operator = operators[Math.floor(Math.random() * operators.length)];
            
            let question = '';
            let answer = 0;
            
            switch(operator) {
                case '+':
                    question = `${num1} + ${num2}`;
                    answer = num1 + num2;
                    break;
                case '-':
                    question = `${num1} - ${num2}`;
                    answer = num1 - num2;
                    break;
                case '*':
                    question = `${num1} × ${num2}`;
                    answer = num1 * num2;
                    break;
            }
            
            document.getElementById('captchaQuestion').textContent = question;
            captchaAnswer = answer;
            document.getElementById('captchaAnswer').value = '';
        }
        
        // ==================== CONTADOR DE VISITAS ====================
        
        function updateVisitsCounter() {
            // Obtener visitas actuales del localStorage
            let visits = localStorage.getItem('totalVisits2025');
            
            if (visits) {
                totalVisits = parseInt(visits);
            } else {
                totalVisits = 0;
            }
            
            // Incrementar contador
            totalVisits++;
            
            // Guardar en localStorage
            localStorage.setItem('totalVisits2025', totalVisits.toString());
            
            // Actualizar en todas las ubicaciones
            document.getElementById('visitsCount').textContent = totalVisits;
            document.getElementById('visitsCountLogin').textContent = totalVisits;
            document.getElementById('visitsCountFooter').textContent = totalVisits;
        }
        
        // ==================== APLICACIÓN PRINCIPAL ====================
        
        function initMap() {
            // Crear el mapa centrado en una ubicación por defecto
            map = L.map('map').setView([19.4326, -99.1332], 10);
            
            // Agregar capa de OpenStreetMap
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
        }
        
        function requestLocationPermission() {
            const statusElement = document.getElementById('locationPermissionStatus');
            
            if (!navigator.geolocation) {
                statusElement.innerHTML = '<div class="error"><i class="fas fa-exclamation-circle"></i> Tu navegador no soporta geolocalización</div>';
                return;
            }
            
            // Solicitar ubicación una vez para inicializar
            navigator.geolocation.getCurrentPosition(
                function(position) {
                    statusElement.innerHTML = '<div class="success"><i class="fas fa-check-circle"></i> Permiso de ubicación concedido. Obteniendo datos...</div>';
                    updateUserLocation(position);
                    setTimeout(() => {
                        statusElement.style.display = 'none';
                    }, 3000);
                },
                function(error) {
                    let errorMessage = "No se pudo obtener tu ubicación. ";
                    switch(error.code) {
                        case error.PERMISSION_DENIED:
                            errorMessage += "Permiso denegado por el usuario.";
                            break;
                        case error.POSITION_UNAVAILABLE:
                            errorMessage += "La información de ubicación no está disponible.";
                            break;
                        case error.TIMEOUT:
                            errorMessage += "La solicitud de ubicación ha expirado.";
                            break;
                        default:
                            errorMessage += "Error desconocido.";
                    }
                    statusElement.innerHTML = `<div class="error"><i class="fas fa-exclamation-circle"></i> ${errorMessage}</div>`;
                    
                    // Usar ubicación por defecto
                    const defaultPosition = {
                        coords: {
                            latitude: 19.4326,
                            longitude: -99.1332,
                            accuracy: 50000
                        }
                    };
                    updateUserLocation(defaultPosition);
                },
                {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                }
            );
        }
        
        function updateUserLocation(position) {
            const lat = position.coords.latitude;
            const lng = position.coords.longitude;
            const accuracy = position.coords.accuracy;
            
            currentLocation = { lat, lng, accuracy };
            
            // Actualizar el mapa
            map.setView([lat, lng], 13);
            
            // Eliminar marcador anterior si existe
            if (userMarker) {
                map.removeLayer(userMarker);
            }
            
            // Crear un círculo de precisión
            const accuracyCircle = L.circle([lat, lng], {
                color: '#1a2980',
                fillColor: '#1a2980',
                fillOpacity: 0.1,
                radius: accuracy
            }).addTo(map);
            
            // Crear marcador de usuario
            userMarker = L.marker([lat, lng], {
                icon: L.divIcon({
                    className: 'user-location-marker',
                    html: '<div style="background-color: #26d0ce; width: 20px; height: 20px; border-radius: 50%; border: 3px solid white; box-shadow: 0 0 10px rgba(0,0,0,0.3);"></div>',
                    iconSize: [26, 26],
                    iconAnchor: [13, 13]
                })
            }).addTo(map);
            
            // Agregar popup al marcador
            userMarker.bindPopup("<b>Tu ubicación actual</b><br>Precisión: " + Math.round(accuracy) + " metros").openPopup();
            
            // Actualizar coordenadas en la interfaz
            document.getElementById('lat').textContent = lat.toFixed(6);
            document.getElementById('lon').textContent = lng.toFixed(6);
            document.getElementById('accuracyInfo').textContent = `Precisión: ${Math.round(accuracy)} metros`;
            
            // Obtener dirección a partir de coordenadas
            getAddressFromCoordinates(lat, lng);
            
            // Obtener datos del clima para esta ubicación
            getWeatherData(lat, lng);
        }
        
        function getAddressFromCoordinates(lat, lng) {
            // Usar Nominatim para geocodificación inversa
            const url = `https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}&zoom=18&addressdetails=1`;
            
            fetch(url)
                .then(response => response.json())
                .then(data => {
                    let address = "Ubicación desconocida";
                    
                    if (data && data.address) {
                        const addr = data.address;
                        if (addr.road && addr.house_number) {
                            address = `${addr.road} ${addr.house_number}`;
                            if (addr.city || addr.town || addr.village) {
                                address += `, ${addr.city || addr.town || addr.village}`;
                            }
                        } else if (addr.city || addr.town || addr.village) {
                            address = addr.city || addr.town || addr.village;
                        } else if (addr.state) {
                            address = addr.state;
                        } else if (addr.country) {
                            address = addr.country;
                        }
                        
                        if (addr.country) {
                            address += `, ${addr.country}`;
                        }
                    }
                    
                    // Actualizar la interfaz
                    document.querySelector('#userLocationInfo .address').textContent = address;
                    document.querySelector('#userLocationInfo .coordinates').textContent = 
                        `Coordenadas: ${lat.toFixed(6)}, ${lng.toFixed(6)}`;
                })
                .catch(error => {
                    console.error("Error en geocodificación:", error);
                    document.querySelector('#userLocationInfo .address').textContent = 
                        `Ubicación: ${lat.toFixed(4)}°, ${lng.toFixed(4)}°`;
                });
        }
        
        function getWeatherData(lat, lng) {
            // Simulación de datos climáticos
            const weatherConditions = [
                { condition: "Soleado", icon: "01d", tempRange: [20, 35] },
                { condition: "Parcialmente nublado", icon: "02d", tempRange: [18, 28] },
                { condition: "Nublado", icon: "03d", tempRange: [15, 25] },
                { condition: "Lluvia ligera", icon: "10d", tempRange: [10, 20] },
                { condition: "Lluvia intensa", icon: "09d", tempRange: [8, 18] },
                { condition: "Tormenta", icon: "11d", tempRange: [12, 22] }
            ];
            
            const conditionIndex = Math.abs(Math.floor(lat + lng)) % weatherConditions.length;
            const condition = weatherConditions[conditionIndex];
            
            const baseTemp = 25 - Math.abs(lat) * 0.5;
            const tempVariation = condition.tempRange[1] - condition.tempRange[0];
            const temperature = baseTemp + (Math.sin(lng) * tempVariation * 0.5);
            
            const weatherData = {
                name: `Lat: ${lat.toFixed(2)}°, Lon: ${lng.toFixed(2)}°`,
                weather: [{ description: condition.condition, icon: condition.icon }],
                main: {
                    temp: temperature,
                    feels_like: temperature - (2 + Math.random() * 3),
                    humidity: 40 + Math.floor(Math.random() * 50),
                    pressure: 1000 + Math.floor(Math.random() * 30)
                },
                wind: {
                    speed: 5 + Math.floor(Math.random() * 25)
                }
            };
            
            updateWeatherUI(weatherData);
            lastWeatherUpdate = new Date();
            updateLastUpdateTime();
        }
        
        function updateWeatherUI(data) {
            document.getElementById('cityName').textContent = data.name;
            
            const description = data.weather[0].description;
            document.getElementById('weatherDescription').textContent = 
                description.charAt(0).toUpperCase() + description.slice(1);
            
            document.getElementById('temperature').textContent = data.main.temp.toFixed(1);
            document.getElementById('feelsLike').textContent = data.main.feels_like.toFixed(1) + "°C";
            document.getElementById('humidity').textContent = data.main.humidity + "%";
            document.getElementById('windSpeed').textContent = data.wind.speed.toFixed(1) + " km/h";
            document.getElementById('pressure').textContent = data.main.pressure + " hPa";
            
            const iconElement = document.getElementById('weatherIcon');
            const placeholder = document.getElementById('weatherIconPlaceholder');
            
            if (data.weather[0].icon) {
                const iconCode = data.weather[0].icon;
                const iconUrl = `https://openweathermap.org/img/wn/${iconCode}@2x.png`;
                iconElement.src = iconUrl;
                iconElement.alt = data.weather[0].description;
                iconElement.style.display = 'block';
                placeholder.style.display = 'none';
            } else {
                placeholder.style.display = 'flex';
                iconElement.style.display = 'none';
                
                let iconClass = "fa-sun";
                const description = data.weather[0].description.toLowerCase();
                
                if (description.includes("lluvia")) iconClass = "fa-cloud-rain";
                else if (description.includes("nublado")) iconClass = "fa-cloud";
                else if (description.includes("parcialmente")) iconClass = "fa-cloud-sun";
                else if (description.includes("tormenta")) iconClass = "fa-bolt";
                
                placeholder.innerHTML = `<i class="fas ${iconClass} fa-3x" style="color: #1a2980;"></i>`;
            }
        }
        
        function updateLastUpdateTime() {
            if (lastWeatherUpdate) {
                const timeStr = lastWeatherUpdate.toLocaleTimeString('es-MX', {
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                });
                document.getElementById('lastUpdate').textContent = timeStr;
            }
        }
        
        function setupEventListeners() {
            // Botón para obtener ubicación actual
            document.getElementById('getCurrentLocation').addEventListener('click', function() {
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        updateUserLocation(position);
                    },
                    function(error) {
                        alert("No se pudo obtener la ubicación. Error: " + error.message);
                    },
                    {
                        enableHighAccuracy: true,
                        timeout: 10000,
                        maximumAge: 0
                    }
                );
            });
            
            // Botón para seguir ubicación en tiempo real
            document.getElementById('trackLocation').addEventListener('click', function() {
                const button = this;
                
                if (watchId) {
                    navigator.geolocation.clearWatch(watchId);
                    watchId = null;
                    button.innerHTML = '<i class="fas fa-satellite"></i> Seguir Ubicación';
                    button.style.backgroundColor = '';
                } else {
                    watchId = navigator.geolocation.watchPosition(
                        function(position) {
                            updateUserLocation(position);
                        },
                        function(error) {
                            alert("Error en seguimiento de ubicación: " + error.message);
                        },
                        {
                            enableHighAccuracy: true,
                            timeout: 10000,
                            maximumAge: 0
                        }
                    );
                    button.innerHTML = '<i class="fas fa-satellite"></i> Detener Seguimiento';
                    button.style.backgroundColor = '#26d0ce';
                }
            });
            
            // Botón para buscar ubicación
            document.getElementById('searchLocation').addEventListener('click', searchLocation);
            
            // Botón para actualizar clima
            document.getElementById('refreshWeather').addEventListener('click', function() {
                if (currentLocation) {
                    getWeatherData(currentLocation.lat, currentLocation.lng);
                }
            });
            
            // Botones para compartir
            document.getElementById('shareLocationTwitter').addEventListener('click', shareOnTwitter);
            document.getElementById('shareLocationFacebook').addEventListener('click', shareOnFacebook);
            document.getElementById('copyLocation').addEventListener('click', copyLocationInfo);
            
            // Permitir búsqueda con Enter
            document.getElementById('locationInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    searchLocation();
                }
            });
        }
        
        function searchLocation() {
            const locationInput = document.getElementById('locationInput').value;
            if (!locationInput.trim()) {
                alert("Por favor, ingresa una ubicación para buscar.");
                return;
            }
            
            const url = `https://nominatim.openstreetmap.org/search?format=json&q=${encodeURIComponent(locationInput)}&limit=1`;
            
            fetch(url)
                .then(response => response.json())
                .then(data => {
                    if (data && data.length > 0) {
                        const result = data[0];
                        const lat = parseFloat(result.lat);
                        const lng = parseFloat(result.lon);
                        
                        const position = {
                            coords: {
                                latitude: lat,
                                longitude: lng,
                                accuracy: 100
                            }
                        };
                        
                        updateUserLocation(position);
                    } else {
                        alert("No se encontró la ubicación: " + locationInput);
                    }
                })
                .catch(error => {
                    console.error("Error en búsqueda de ubicación:", error);
                    alert("Error al buscar la ubicación. Por favor, intenta de nuevo.");
                });
        }
        
        function shareOnTwitter() {
            if (!currentLocation) return;
            
            const temp = document.getElementById('temperature').textContent;
            const desc = document.getElementById('weatherDescription').textContent;
            const city = document.getElementById('cityName').textContent;
            
            const text = `Estoy en ${city}. Clima actual: ${temp}°C, ${desc}. Ubicación exacta: ${currentLocation.lat.toFixed(4)}°, ${currentLocation.lng.toFixed(4)}°`;
            const url = `https://twitter.com/intent/tweet?text=${encodeURIComponent(text)}`;
            
            window.open(url, '_blank', 'width=600,height=400');
        }
        
        function shareOnFacebook() {
            if (!currentLocation) return;
            
            const temp = document.getElementById('temperature').textContent;
            const desc = document.getElementById('weatherDescription').textContent;
            
            const text = `Mi ubicación actual: ${currentLocation.lat.toFixed(4)}°, ${currentLocation.lng.toFixed(4)}°. Clima: ${temp}°C, ${desc}.`;
            const url = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(window.location.href)}&quote=${encodeURIComponent(text)}`;
            
            window.open(url, '_blank', 'width=600,height=400');
        }
        
        function copyLocationInfo() {
            if (!currentLocation) return;
            
            const temp = document.getElementById('temperature').textContent;
            const desc = document.getElementById('weatherDescription').textContent;
            const address = document.querySelector('#userLocationInfo .address').textContent;
            
            const text = `📍 Mi ubicación actual:\n${address}\nCoordenadas: ${currentLocation.lat.toFixed(6)}, ${currentLocation.lng.toFixed(6)}\n\n🌤️ Clima actual:\n${temp}°C, ${desc}\nHumedad: ${document.getElementById('humidity').textContent}\nViento: ${document.getElementById('windSpeed').textContent}`;
            
            navigator.clipboard.writeText(text).then(() => {
                const shareMessage = document.getElementById('shareMessage');
                shareMessage.innerHTML = '<div class="success"><i class="fas fa-check"></i> Información copiada al portapapeles</div>';
                shareMessage.style.display = 'block';
                
                setTimeout(() => {
                    shareMessage.style.display = 'none';
                }, 3000);
            }).catch(err => {
                console.error('Error al copiar: ', err);
                alert("No se pudo copiar la información. Por favor, intenta manualmente.");
            });
        }
        
        // Actualizar el tiempo de última actualización cada minuto
        setInterval(updateLastUpdateTime, 60000);
    </script>
</body>
</html>
